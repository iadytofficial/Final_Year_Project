# AgroLK Environment Configuration Example
# Copy to .env and adjust values for your environment

# Core
NODE_ENV=development
PORT=4000
MONGODB_URI=mongodb://localhost:27017/agrolk
JWT_SECRET=change_this_access_secret
JWT_REFRESH_SECRET=change_this_refresh_secret
FRONTEND_URL=http://localhost:3000
ADMIN_EMAIL=admin@agrolk.com

# Email
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM_NAME=AgroLK
EMAIL_REPLY_TO=support@agrolk.com
EMAIL_TEMPLATE_PATH=server/templates/emails

# Sessions
SESSION_SECRET=change_this_session_secret
SESSION_TIMEOUT_MINUTES=30
REMEMBER_ME_DURATION_DAYS=30

# File Uploads
MAX_FILE_SIZE_MB=5
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
IMAGE_COMPRESSION_QUALITY=0.8

# Third-party APIs
GOOGLE_MAPS_API_KEY=
GOOGLE_VISION_API_KEY=
GOOGLE_GEMINI_API_KEY=

# Payments (Stripe/PayPal)
PAYMENT_GATEWAY_KEY=
PAYMENT_GATEWAY_SECRET=

# Broadcasting
BROADCAST_RADIUS_KM=5
BROADCAST_TIMEOUT_MINUTES=30

# Commission & Fees
PLATFORM_COMMISSION_PERCENTAGE=15
PAYMENT_GATEWAY_FEE_PERCENTAGE=2.9
PAYMENT_GATEWAY_FEE_FIXED=0.30

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Rate Limiting
RATE_LIMIT_WINDOW_MINUTES=1
RATE_LIMIT_MAX_REQUESTS=100

# CDN
CDN_URL=
CDN_API_KEY=

# Timezone
DEFAULT_TIMEZONE=Asia/Colombo

# Currency
DEFAULT_CURRENCY=LKR
SUPPORTED_CURRENCIES=LKR,USD,EUR,GBP,INR

# Cancellation Policy
CANCELLATION_FULL_REFUND_HOURS=48
CANCELLATION_PARTIAL_REFUND_HOURS=24
CANCELLATION_PARTIAL_REFUND_PERCENTAGE=50
